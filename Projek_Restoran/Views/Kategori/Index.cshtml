@model IEnumerable<Projek_Restoran.Models.Kategori>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Tambah Data</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.Display("Nama kategori")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamaKategori)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdKategori">Ubah</a> |
                <a asp-action="Details" asp-route-id="@item.IdKategori">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdKategori">Hapus</a>
            </td>
        </tr>
}
    </tbody>
</table>
