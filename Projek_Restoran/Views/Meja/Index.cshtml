@model IEnumerable<Projek_Restoran.Models.Meja>

@{
    ViewData["Title"] = "Meja";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a class="btn btn-info" asp-action="Create">Tambah Data</a>
</p>
@using (Html.BeginForm("index", "Meja", FormMethod.Get))
{
    <p>
        Nama: @Html.DropDownList("nmr", null, "Pilih No Meja", new { @class="form-control"})
        Cari Data : @Html.TextBox("searchString", null, new {@class="form-control", @placeholder="No Meja"})
        <input class="btn btn-primary" type="submit" value="Filter" />
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("No Meja")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomorMeja)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdMeja">Ubah</a> |
                    <a asp-action="Details" asp-route-id="@item.IdMeja">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdMeja">Hapus</a>
                </td>
            </tr>
        }
    </tbody>
</table>
