@model Projek_Restoran.Models.Meja

@{
    ViewData["Title"] = "Edit";
}

<h2>Ubah Data Meja</h2>

<h4>Meja</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdMeja" />
            <div class="form-group">
                <label asp-for="NomorMeja" class="control-label">No Meja</label>
                <input asp-for="NomorMeja" class="form-control" />
                <span asp-validation-for="NomorMeja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Simpan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Kembali</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
